package kjh;

import java.util.Scanner;

public class kjhk {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("몇명?");
		int 몇명 = sc.nextInt();
		int 성적;
		int sum = 0;
		for(int i = 0; i<몇명; i++) {
			성적 = sc.nextInt();
			sum = sum + 성적;
			
		}
		System.out.println(몇명+"명의 총점은 "+sum+"이고, 평균은 "+(float)sum/몇명);
	}
}
